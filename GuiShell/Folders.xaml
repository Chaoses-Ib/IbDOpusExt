<Page x:Class="GuiShell.Folders"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:GuiShell"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      d:Background="White"
      Title="Folders">
    <StackPanel>
        <Expander Header="FolderBehaviour" IsExpanded="True">
            <StackPanel Orientation="Vertical" Margin="0,5,0,0">
                <CheckBox x:Name="checkGetSizesByEverything">
                    <TextBlock TextWrapping="Wrap">
                        Get folder sizes from Everything when calculating them<LineBreak/>
                        Require that Everything's "Index folder size" option is turned on (at Options\Indexes).
                    </TextBlock>
                </CheckBox>
            </StackPanel>
        </Expander>
    </StackPanel>
</Page>
